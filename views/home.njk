<!DOCTYPE html>
 <html>
   <head>
     <meta charset="UTF-8">
     <title>HomePage</title>
   </head>
   <body>
   <ul>
    {% for game in games %}
      {% if loop.index0 < 20 %}
        <li>
          <p>{{game.name}}</p>
            {% if game.cover === undefined %}
            <img src="images/CoverMissing.jpg" alt ="Game's cover is missing" />
            {% else %}
            <img src="{{game.cover.url}}" alt="Game's cover" />
            {% endif %}
        </li>
      {% endif %}
    {% endfor %}
   </ul>
   </body>
 </html>
