{% extends "layout.njk" %}
  {% block content %}
  <h1>Bienvenue sur notre site de jeux vid√©os</h1>
   <ul>
    {% for game in games %}
        <li>
          <a href="/game/{{game.slug}}">{{game.name}}</a>
            {% if game.cover === undefined %}
            <img src="images/CoverMissing.jpg" alt ="Game's cover is missing" />
            {% else %}
            <img src="{{game.cover.url}}" alt="Game's cover" />
            {% endif %}
        </li>
    {% endfor %}
   </ul>
  {% endblock %}
