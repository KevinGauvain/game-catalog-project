{% extends "layout.njk" %}
<h1>Bienvenue sur notre site de jeux vidéos</h1>
  {% block content %}
  <h1>Bienvenue sur notre site de jeux vidéos</h1>
   <ul>
    {% for game in games %}
        <li>
          <p>{{game.name}}</p>
            {% if game.cover === undefined %}
            <img src="images/CoverMissing.jpg" alt ="Game's cover is missing" />
            {% else %}
            <img src="{{game.cover.url}}" alt="Game's cover" />
            {% endif %}
        </li>
    {% endfor %}
   </ul>
  {% endblock %}
