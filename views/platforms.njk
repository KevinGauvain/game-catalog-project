{% extends "layout.njk" %}
  {% block content %}
   <h1>Platform Lists! </h1>

  <div class="container">
    <div class="row">
      {% for platform in platformObject %}
          <div class="col-md-4 col-sm-6">
            <a href="/platform/{{platform.name}}" class="btn btn-outline-primary link-platform">
              {{platform.name}}
            </a>
          </div>
      {% endfor %}
    </div>
  </div>

  {% endblock %}
