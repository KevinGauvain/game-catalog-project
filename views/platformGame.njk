{% extends "layout.njk" %}

  {% block content %}
    <div class="container">
      <div class="row">
        {% for game in platforms %}
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="card border-primary mb-3">
              {% if game.cover === undefined %}
                <img class="card-img-top" src="../images/CoverMissing.jpg" alt ="Game's cover is missing" />
              {% else %}
                <img class="card-img-top" src="{{game.cover.url}}" alt="Game's cover" />
              {% endif %}
            <div class="card-body text-secondary d-flex align-items-center justify-content-center">
              <h5 class="card-title">{{game.name}}</h5>
            </div>
            <a href="/game/{{game.slug}}" class="btn-outline-primary">
              <div class="card-footer bg-transparent border-primary text-center">
                Details Game!
              </div>
            </a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  {% endblock %}
